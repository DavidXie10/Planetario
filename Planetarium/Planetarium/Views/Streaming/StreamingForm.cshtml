@model Planetarium.Models.StreamingModel
@{
    ViewBag.Title = "Agregar evento en vivo";
    List<SelectListItem> dropDownActivitiesNames = ViewBag.DropDownActivitiesNames;
}

<head>
    <title>@ViewBag.Title</title>
</head>

<body>
    
    <div class="container" style="margin-bottom:15%; margin-top:3%">
        <h2>Formulario para agregar eventos en vivo</h2>
        <br />
        @using (Html.BeginForm("SubmitStreamingForm", "Streaming", FormMethod.Post, new { enctype = "multipart/form-data" })) {
            @Html.AntiForgeryToken()
            <div class="form">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-success text-center">
                            NUEVO EVENTO EN VIVO
                            <button type="button" class="btn btn-outline-primary alig" style="float: right;" data-toggle="modal" data-target="#exampleModalCenter">
                                <i class="fas fa-info-circle"></i>
                            </button>
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                @Html.LabelFor(model => model.ActivityTitle)
                                @Html.DropDownListFor(model => model.ActivityTitle, dropDownActivitiesNames, "- Sin selección -", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ActivityTitle, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                @Html.LabelFor(model => model.Link)
                                @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div style="text-align:right;">
                            <input type="submit" class="btn btn-success" style=" padding: 5px 55px 5px 55px;" value="Agregar streaming" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Agregar el enlace de la actividad en vivo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        El formulario acepta enlaces de transmisiones en vivo de la plataforma YouTube
                    </p>
                    <p>
                        Puedes encontrar el tutorial en el siguiente enlace:
                        <a href="~/Data_Files/Tutorial para agregar enlace a actividad en vivo.pdf" target="blank">Tutorial para agregar enlace a actividad en vivo.pdf</a>
                    </p>
                </div>
                
            </div>
        </div>
    </div>
</body>
