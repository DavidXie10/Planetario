
<!DOCTYPE html>
<html>
<head>
    <title>Noticia</title>
</head>

<body>
    <div class="container">
        <div class="card-body">
            <p class="card-text">
                <h2>@ViewBag.News.Title</h2>
            </p>
            <hr/>
            <p class="card-text"> @ViewBag.News.Date </p>
            <p class="card-text" style="font-size: 22px">Categoría: @ViewBag.News.Category </p>
            <p class="card-text" style="font-size: 22px">
                Tópicos:
                @foreach (var topic in @ViewBag.News.Topics) {
                    <a class="badge rounded-pill bg-info"> @topic </a>
                }
            </p>
        </div>
        <div class="card col-md">
            <div class="card-body">
                <p class="card-text"><h5>@ViewBag.News.Content</h5></p>
            </div>
        </div>

        <div class="card col-md">
            
            @if (ViewBag.News.ImagesRef.Count != 0) {
                <div id="carouselNewsImage" class="carousel slide carousel-fade" data-ride="carousel" style="margin: 20px 5px 20px 5px">
                    <div class="carousel-inner">

                        <div class="carousel-item active">
                            <img src="~/images/news/@(ViewBag.News.ImagesRef[0])" class="d-block w-100 carousel-Img" alt="...">
                        </div>

                        @for (int i = 1; i < ViewBag.News.ImagesRef.Count; i++) {
                            <div class="carousel-item">
                                <img src="~/images/news/@(ViewBag.News.ImagesRef[i])" class="d-block w-100 carousel-Img" alt="...">
                            </div>
                        }

                    </div>
                    @if (ViewBag.News.ImagesRef.Count > 1) {
                        <a class="carousel-control-prev" href="#carouselNewsImage" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselNewsImage" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    }
                </div>
            }

        </div>
        <a class="btn btn-primary" href="/News/ListNews" role="button">Ver más noticias</a>
    </div>

</body>
</html>
