
@model Planetarium.Models.EmployeeModel
@{
    ViewBag.Title = "Crear Funcionario";

    List<SelectListItem> Countries = ViewBag.Countries;
}
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    @if (ViewBag.Message != null) {
        if (ViewBag.SucessOnCreation) {
            <div class="alert-success">
                <h3> @ViewBag.Message </h3>
            </div>
        } else {
            <div class="alert-danger">
                <h3> @ViewBag.Message </h3>
            </div>
        }
    }
    @using (Html.BeginForm("CreateEmployee", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()
        <h1>Formulario de creación de funcionario</h1>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName)
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.PhotoFile)
                <br />
                @Html.TextBoxFor(model => model.PhotoFile, new { type = "file", @class = "btn btn alert-info" })
                @Html.ValidationMessageFor(model => model.PhotoFile, "", new {
               @class = "text-danger"
                })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.DateOfBirth)
                <br />
                @Html.EditorFor(model => model.DateOfBirth, new { @type = "date" })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                @Html.LabelFor(model => model.Gender)
                <br />
                <select name="gender">
                    <option value="N" selected>Género</option>
                    <option value="M">Hombre</option>
                    <option value="F">Mujer</option>
                    <option value="O">Otro</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Mail)
                @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", @placeholder = "john.doe@gmail.com" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Occupation)
                @Html.TextBoxFor(model => model.Occupation, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group"> 
                @Html.LabelFor(model => model.NativeCountry)
                <br />
                @Html.DropDownListFor(model => model.NativeCountry, Countries, "- Sin selección - ", new { @class = "form-control" })
            </div>
            <br />

            <div class="form-group">
                @Html.LabelFor(model => model.Languages)
                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                            <fieldset name="checkbox">
                                <br />
                                <input type="checkbox" name="language" value="Inglés" /> Inglés <br />
                                <input type="checkbox" name="language" value="Español" /> Español <br />
                                <input type="checkbox" name="language" value="Francés" /> Francés <br />
                            </fieldset>
                        </div>
                        <div class="col-sm">
                            <fieldset name="checkbox">
                                <br />
                                <input type="checkbox" name="language" value="Polaco" /> Polaco <br />
                                <input type="checkbox" name="language" value="Ruso" /> Ruso  <br />
                                <input type="checkbox" name="language" value="Portugués" /> Portugués <br />
                            </fieldset>
                        </div>
                        <div class="col-sm">
                            <fieldset name="checkbox">
                                <br />
                                <input type="checkbox" name="language" value="Chino mandarín" /> Chino mandarín <br />
                                <input type="checkbox" name="language" value="Italiano" /> Italiano <br />
                                <input type="checkbox" name="language" value="Alemán" /> Alemán <br />
                            </fieldset>
                        </div>
                    </div>
                </div>

            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Dni)
                @Html.TextBoxFor(model => model.Dni, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Dni, "", new { @class = "text-danger", @placeholder = "#########" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNumber)
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @placeholder = "########" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.ExpertiseArea)
                @Html.TextBoxFor(model => model.ExpertiseArea, new { @class = "form-control" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Address)
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.AcademicDegree)
                @Html.TextBoxFor(model => model.AcademicDegree, new { @class = "form-control" })
            </div>
            <br />
            <input type="submit" class="btn btn-success" value="Crear" />
        </div>
    }
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</html>

<script>
    $(document).ready(function () {
        load_json_data("contry");

        function load_json_data(id) {
            var html_code = "";
            $.getJSON("paises.json", function (data) {
                html_code += '<option value="">Ingrese ' + id + "</option>";
                $.each(data, function (key, value) {
                    html_code += '<option value="' + value.id + '">' + value.name + "</option>";
                });
                $("#" + id).html(html_code);
            });
        }
    });
</script>
