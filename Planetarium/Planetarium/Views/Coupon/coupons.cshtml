</html>
<script>
    function couponCodeCopiedToClipboard(id) {
        /* Get the text field */
        var copyText = document.getElementById(id);

        /* Select the text field */
        copyText.select();

        /* Copy the text inside the text field */
        navigator.clipboard.writeText(copyText.value);

    }
</script>

