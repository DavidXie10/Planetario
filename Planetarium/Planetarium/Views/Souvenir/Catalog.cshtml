@{
    ViewBag.Title = "Souvenirs";
}

<head>
    <title>@ViewBag.Title</title>
</head>

<body>
    <div class="container" style="height: 100vh; width:100%;">
        <br/>
        <div class="card d-flex">
            <div class="card-header">
                <div class="row d-flex">
                    <div class="col">
                        <h1 class="text-start">@ViewBag.Title</h1>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row d-flex">
                    @foreach (var souvenir in ViewBag.Catalog) {
                        <div class="col-4 d-flex ">
                            <div class="card rounded-3  w-100 " style="margin:15px;">
                                <div class="card-header">
                                    <h4><strong>@souvenir.Name </strong>  </h4>
                                </div>

                                <div class="card-body">
                                    <img class="passaport-Img" width="165" height="200" src="~/images/Souvenirs/@ViewBag.souvenir.ImagesRef[0]" alt="a catalog item photo">
                                </div>
                                <div class="card-footer text-center">
                                    <div class="d-flex justify-content-center">
                                        <button>Comprar</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</body>
