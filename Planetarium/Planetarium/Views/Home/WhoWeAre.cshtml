
<!DOCTYPE html>
<html>
<head>
    <title>¿Quiénes somos?</title>
</head>
<body>
    <h4 class="text-md-left" style="margin: 5px;">Planetario de San José UCR</h4>

    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel" style="margin: 20px 5px 20px 5px">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/earth.jpg" class="d-block w-100 carousel-Img" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/hurricane.jpg" class="d-block w-100 carousel-Img" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container">
        <div class="row">
            <div class="card col-md">
                <div class="card-header">
                    Misión
                </div>
                <div class="card-body">
                    <p class="card-text">@ViewBag.MissionMessage</p>
                </div>
            </div>

            <div class="card col-md">
                <div class="card-header">
                    Visión
                </div>
                <div class="card-body">
                    <p class="card-text">@ViewBag.VisionMessage</p>
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <h4 class="text-md-left" style="margin: 5px;">Conozca nuestros funcionarios</h4>
        <br>
            <div class="container">
                @{ 
                string alignInfo="";
                for (int i=0;i<3;i++) {
                    if (i % 2 == 0)
                    {
                        alignInfo = "employees-left";
                    }
                    else {
                        alignInfo = "employees-right";
                    }
                <div class="card col-md">
                    <div class=@alignInfo>
                        <img src="~/images/EmployeesProfilePhotos/@ViewBag.IdPhoto" alt="an employee photo " class="passaport-Img" />
                        <div class="employee-data">
                            <h5 class="employee-name"> @ViewBag.Name @ViewBag.LastName</h5>
                            <p> @ViewBag.AcademicDegree </p> 
                            <p> @ViewBag.Occupation </p>
                            <p> @ViewBag.Mail </p>
                            <p class="phrase">@ViewBag.Phrase</p>
                        </div>
                        <br>
                </div>
                </div>
                }
                }
            </div>
    </div>
    
</body>
</html>